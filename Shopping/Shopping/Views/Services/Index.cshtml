@{
    var items = (List<ServiceModel>)ViewData["Items"];
}
<header>
    <style>
        td {
            align-content: center;
            align-items: center;
        }
    </style>
</header>
<table class="table table-hover table-active" border="1" color="black" cellpadding="5px" width="75%" align="center">
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Brand</td>
        <td>Price</td>
    </tr>
    @foreach (var item in items)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.price</td>
            <td><a href="/services/details/@item.id"><button type="button" class="btn btn-secondary">Show</button></a></td>
        </tr>
    }

</table>

*@