
@{
    var products = (List<ProductModel>)ViewData["Products"];
}

    <form class="form-inline my-3" asp-action="Search" asp-controller="Products">
    <input class="form-control mr-sm-2" typeof="search" name="SearchForName" placeholder="Search" aria-label="" />
    <button class="btn btn-outline-success my-2" type="submit">Search</button> </form>

    <header>
        <style>
            a {
            }
        </style>
    </header>
    <table class="table table-hover table-active" border="1" color="black" cellpadding="5px" width="75%" align="center">
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Brand</td>
            <td>Price</td>
            <td>Image</td>
        </tr>
        @foreach (var item in products)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.brand</td>
                <td>@item.price</td>
                <td><image height="200" src=@item.image></image></td>
                <td><a href="/products/details/@item.id"><button type="button" class="btn btn-secondary">Show</button></a></td>
            </tr>
        }

    </table>
